{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.20.4.51522",
      "templateHash": "6303712475731123646"
    }
  },
  "parameters": {
    "backendSubnetId": {
      "type": "string"
    },
    "resourceName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "variables": {
    "ipconfName": "[format('{0}-ipconfig', parameters('resourceName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2022-07-01",
      "name": "[parameters('resourceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('ipconfName')]",
            "properties": {
              "subnet": {
                "id": "[parameters('backendSubnetId')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[reference(resourceId('Microsoft.Resources/deployments', 'vmpip'), '2022-09-01').outputs.vmPipId.value]"
              }
            }
          },
          {
            "name": "[format('{0}-v6', variables('ipconfName'))]",
            "properties": {
              "privateIPAddressVersion": "IPv6",
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('backendSubnetId')]"
              }
            }
          }
        ]
      }
    }
  ]
}